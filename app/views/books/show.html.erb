<div class="container px-5 px-sm-0">
  <div class="row">
    <p class="notice">
      <% if @book.errors.any? %>
        <%= @book.errors.count %>Errors
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </p>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book_id.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book_id.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th> <%= @book_id.user.introduction %> </th>
           </tr>
        </tbody>
      </table>

      <div class="row">
        <% if @user == current_user %>
          <%= link_to edit_user_path(current_user) do %>
            <p class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_10"></p>
          <% end %>
        <% else %>
          <%= link_to books_path do %>
            <button class="btn btn-outline-secondary btn-block fas fa-user-cog " ></button>
          <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, local:true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_title">Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tbody
          <tr>
            <td>
              <%= link_to user_path(@book_id.user) do %>
              <%= attachment_image_tag @book_id.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(@book_id.user) do %>
              <%= @book_id.user.name %>
              <% end %>
            </td>
            <td class ="book_351">
              <%= link_to @book_id.title, book_path %>
            </td>
            <td><%= @book_id.body %></td>
            <% if @book_id.user == current_user %>
              <td><%= link_to"Edit",edit_book_path(@book_id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to"Destroy",book_path(@book_id), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>