<%= render 'users/info', user: @user, book: @book %>

     <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

           <tbody>
            <% @books.each do |book| %>
             <tr>
               <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
               <td>
                 <div class ="book_351">
                 <%= link_to book.title, book_path(book.id) %>
                 </div>
                </td>
                 <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>