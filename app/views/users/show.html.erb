<main>
  <div class="container">
    <div class="row">
      <%= render 'users/info', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>User detail</h2>
        <tbody>
          <tr>
            <% @books.each do |book| %>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td class ="book_351"><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
          </tr>
        </tbody>
      </div>
    </div>
  </div>
</main>