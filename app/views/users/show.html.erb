<div class="container px-5 px-sm-0">
  <div class="row">
    <p class="notice">
      <% if @book.errors.any? %>
        <%= @book.errors.count %>Errors
        <% @book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
    </p>
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th> <%= @user.introduction %> </th>
           </tr>
        </tbody>
      </table>

      <div class="row">
        <% if @user == current_user %>
          <%= link_to edit_user_path(current_user) do %>
            <p class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_10"></p>
          <% end %>
        <% else %>
          <%= link_to books_path do %>
          <p class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_10"></p>
          <% end %>
        <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: books_path, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_title">Body</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <div class="btn btn-success">
            <%= f.submit 'submit' %>
          </div>
        </div>
        <% end %>
      </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <% @books.each do |book| %>
            <td>
              <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td class ="book_351"><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
          <%= paginate @books %>
        </tbody>
      </table>
    </div>
  </div>
</div>
