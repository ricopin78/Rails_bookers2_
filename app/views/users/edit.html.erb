<p class="notice">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>Errors
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form">
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
           <%= f.attachment_field :profile_image, placeholder: "ProfileImage" %>
        </div>
        <div class="form-group">
        <label for="inputName">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction", class:"form-control textarea"%>
        </div>
        <div class="form-group">
        <%= f.submit "Update User",class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>