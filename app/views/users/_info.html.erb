<p class="notice">
  <% if book.errors.any? %>
    <%= book.errors.count %>Errors
    <% book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
</p>

<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th> <%= current_user.introduction %> </th>
      </tr>
      <tr>
      <% @user ||= current_user %>
      <div class="stats">
        <a href="<%= following_user_path(@user) %>">
          <strong id="following" class="stat">
            <%= @user.following.count %>
            </strong>
            following
        </a>
        <a href="<%= followers_user_path(@user) %>">
          <strong id="followers" class="stat">
            <%= @user.followers.count %>
            </strong>
            followers
        </a>
      </div>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(current_user) do %>
      <button class="btn btn-outline-secondary btn-block fas fa-user-cog " ></button>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, url: books_path, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-controll book_title" %>
  </div>
  <div class="form-group">
    <label for="book_title">Opinion</label>
    <%= f.text_area :body, class:"form-controll book_body"%>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
  <% end %>
</div>

