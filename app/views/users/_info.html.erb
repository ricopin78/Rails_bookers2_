<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>Introduction</th>
              <th> <%= user.introduction %> </th>
            </tr>
          </tbody>
        </table>

        <div class="row">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_10">  <%= link_to "プロフィール編集", edit_user_path(user)%></a>
        </div>

        <h2 class="mt-3">New book</h2>
        <form>
          <%= form_with model: book, url: books_path, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
            </div>
          <div class="form-group">
            <label for="book_title">Body</label>
            <%= f.text_area :body %>
          </div>
          <div class="form-group">
            <div class="btn btn-success">
              <%= f.submit 'submit' %>
            </div>
          </div>
          <% end %>
        </form>
      </div>

      <div class="col-md-8 offset-md-1">
        <% if current_page?(users_path) %>
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
            <% @users.each do |user| %>
              <td class = "attachment user profile_image fallback">
              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              </td>
              <td><%= user.name %></td>
              <td class = "user_5"><%= link_to "Show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </tbody>

        <% else %>
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <tr>
            <% @books.each do |book| %>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
              <td>
                <div class ="book_351">
                <%= link_to book.title, book_path(book.id) %>
                </div>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        <% end %>
      </div>
    </div>
  </div>
</main>